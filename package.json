{
  "name": "@salesforcebob/salesforce-marketing-cloud-engagement-mcp",
  "author": "Bob Ullery, Distinguished Technical Architect @ Salesforce",
  "version": "1.1.0",
  "private": false,
  "type": "module",
  "description": "Model Context Protocol (MCP) server for Salesforce Marketing Cloud Engagement (MCE)",
  "license": "MIT",
  "engines": {
    "node": ">=18.17"
  },
  "bin": {
    "mce-mcp": "dist/cli.js",
    "salesforce-marketing-cloud-engagement-mcp": "dist/cli.js"
  },
  "scripts": {
    "build": "tsup src/cli.ts --format esm --dts --clean --out-dir dist",
    "dev": "tsx src/cli.ts serve",
    "serve": "node dist/cli.js serve",
    "web": "node dist/cli.js web",
    "prepublishOnly": "pnpm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "fast-xml-parser": "^4.4.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.1.0",
    "eslint": "^9.9.0",
    "tsup": "^8.2.4",
    "tsx": "^4.19.2",
    "typescript": "^5.6.2",
    "vitest": "^2.1.1"
  }
}
